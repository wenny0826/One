<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wenny.one">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <application
        android:name=".base.AppContext"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.Welcome">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.MainActivity"/>
        <activity android:name=".activity.GuideActivity"/>
        <activity android:name=".activity.MovieInfoActivity"/>
        <activity android:name=".activity.ReadInfoActivity"/>
        <activity android:name=".activity.SerialListActivity"/>
        <activity android:name=".activity.SerialInfoActivity"/>
        <activity android:name=".activity.HomeListActivity"/>
        <activity android:name=".activity.HomeMothActivity"/>
        <activity android:name=".activity.HomeInfoActivity"/>
        <activity android:name=".activity.ReadListActivity"/>
        <activity android:name=".activity.MusicListActivity"/>
        <activity android:name=".activity.CommentActivity"/>
        <activity android:name=".activity.MusicInfoActivity"/>
        <activity android:name=".activity.BannerActivity"/>
        <activity android:name=".activity.EssayInfoActivity"/>
        <activity android:name=".activity.QuestionInfoActivity"/>
        <activity
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="sensorLandscape"
            android:name=".activity.PlayerActivity"/>
        <activity android:name=".activity.MusicPlayActivity"/>

        <service android:name=".player.MusicService"/>
    </application>

</manifest>